@using FBM.Core.Resource;
@model FBM.Data.Entity.Station.Castle
@{
    ViewBag.Title = Resources.New;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section actionLinks{
    @Html.ListButton(@Url.Action("Index"))
}
@using (Html.FBMPanel(Resources.Castle))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FBMDiv("form-horizontal"))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.FBMDropDownListFor(x => x.StationId, (IEnumerable<SelectListItem>)ViewBag.StationList)
            @Html.FBMEnumDropDownListFor(x => x.WallPosition)
            @Html.FBMEnumDropDownListFor(x => x.CastlePosition)
            @Html.FBMEnumDropDownListFor(x => x.CastleFloor)
            @Html.FBMSplit();
            @Html.FBMSaveButton()
        }
    }
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
