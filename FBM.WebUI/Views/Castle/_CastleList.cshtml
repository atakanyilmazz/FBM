@using FBM.Core.Resource;
@model IEnumerable<FBM.Data.Entity.Station.Castle>

@Html.Grid(Model).Columns(c =>
{
    c.Add(p => p.Id).Titled("").Encoded(false).Sanitized(false).RenderValueAs(x => RowMenuContact(x.Id).ToHtmlString());
    c.Add(y => y.Station).Titled(Resources.Station).Sortable(true).Filterable(true);
    c.Add(y => y.WallPosition).Titled(Resources.WallPosition).Sortable(true).Filterable(true);
    c.Add(y => y.CastlePosition).Titled(Resources.CastlePosition).Sortable(true).Filterable(true);
    c.Add(y => y.CastleFloor).Titled(Resources.Floor).Sortable(true).Filterable(true);
    c.Add(y => y.CastleNo).Titled(Resources.CastleNo).Sortable(true).Filterable(true);
}).WithPaging(20).Selectable(false).SetLanguage("tr")

@helper RowMenuContact(Guid id)
{
    @Html.BeginActionMenu()
    @Html.CardListItem(Url.Action("Details", "Castle", new { id = id }));
    @Html.EditListItem(Url.Action("Edit", "Castle", new { id = id }));
    @Html.DeleteListItem(Url.Action("Delete", "Castle", new { id = id }));
    @Html.EndActionMenu()
}