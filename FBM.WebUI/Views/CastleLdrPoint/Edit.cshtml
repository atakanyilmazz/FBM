@using FBM.Core.Resource;
@model FBM.Data.Entity.Station.CastleLdrPoint
    ViewBag.Title = Resources.Update;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section actionLinks{
    @Html.ListButton(@Url.Action("Index"))
    @Html.DeleteButton(@Url.Action("Delete", new { id = Model.Id }))
}
@using (Html.FBMPanel(Resources.CastleLdrPoint))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FBMDiv("form-horizontal"))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.FBMDropDownListFor(x => x.CastleId, (IEnumerable<SelectListItem>)ViewBag.CastleList)
            @Html.FBMEnumDropDownListFor(x => x.Axis)
            @Html.FBMEditorFor(x => x.StartPoint)
            @Html.FBMEditorFor(x => x.EndPoint)
            @Html.FBMSplit()
            @Html.FBMSaveButton()
        }
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
