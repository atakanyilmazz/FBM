@using FBM.Core.Resource
@model FBM.Data.Entity.Station.Ldr

@{
    ViewBag.Title = Resources.Card;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section actionLinks{
    @Html.DeleteButton(@Url.Action("Delete", new { id = Model.Id }))
    @Html.EditButton(@Url.Action("Edit", new { id = Model.Id }))
    @Html.ListButton(@Url.Action("Index"))
}

@using (Html.FBMPanel(Resources.Ldr))
{
    using (Html.FBMDl())
    {
        using (Html.FBMDt())
        {
            @Html.DisplayNameFor(x => x.Station)
        }
        using (Html.FBMDd())
        {
            @Html.DisplayFor(x => x.Station.Name)
        }
        @Html.FBMDisplayFor(model => model.Axis)
        @Html.FBMDisplayFor(model => model.WallPosition)
        @Html.FBMDisplayFor(model => model.LdrUnitNo)
        @Html.FBMDisplayFor(model => model.LaserCount)
        @Html.FBMDisplayFor(model => model.AxisOrder)
    }
}