@using FBM.Core.Resource;
@model FBM.Data.Entity.Station.Ldr
@{
    ViewBag.Title = Resources.Update;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section actionLinks{
    @Html.ListButton(@Url.Action("Index"))
    @Html.DeleteButton(@Url.Action("Delete", new { id = Model.Id }))
}
@using (Html.FBMPanel(Resources.Ldr))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FBMDiv("form-horizontal"))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.FBMDropDownListFor(model => model.StationId, (IEnumerable<SelectListItem>)ViewBag.StationList)
            @Html.FBMEnumDropDownListFor(model => model.Axis)
            @Html.FBMEnumDropDownListFor(model => model.WallPosition)
            @Html.FBMEditorFor(model => model.LdrUnitNo)
            @Html.FBMEditorFor(model => model.AxisOrder)
            @Html.FBMEditorFor(model => model.LaserCount)
            @Html.FBMSplit()
            @Html.SaveButton()
        }
    }
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
