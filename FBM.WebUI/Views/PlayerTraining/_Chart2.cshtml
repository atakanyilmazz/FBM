        }],
        yAxis: [{
            type: 'value'
        }],
        series: [{
            name: 'Başarılı',
            type: 'bar',
            data: [@Model.Chart3List[0], @Model.Chart3List[2]]
        }, {
            name: 'Başarısız',
            type: 'bar',
