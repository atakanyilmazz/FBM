@using FBM.Data.DTO
@model LiveTrainingDTO
    <div id="chart2m" style="height:300px;"></div>
<script>
    var myChart1 = echarts.init(document.getElementById('chart2m'), theme);
    myChart1.setOption({
        title: {
            text: '',
            subtext: ''
        },
        //theme : theme,
        tooltip: {
            trigger: 'axis'
        },
        legend: {
            data: ['Başarılı', 'Başarısız']
        },
        toolbox: {
            show: false
        },
        calculable: false,
        xAxis: [{
            type: 'category',
