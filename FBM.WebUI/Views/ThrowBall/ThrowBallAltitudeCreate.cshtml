@using FBM.Core.Resource;
@model FBM.Data.Entity.Throw.ThrowBallAltitude
@{
    ViewBag.Title = Resources.New;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section actionLinks{
    @Html.ListButton(@Url.Action("Index"))
}
@using (Html.FBMPanel(Resources.ThrowBallAltitude))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        using (Html.FBMDiv("form-horizontal"))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.FBMDropDownListFor(x => x.AltitudeTypeId, (IEnumerable<SelectListItem>)ViewBag.AltitudeTypeList)
            @Html.FBMEnumDropDownListFor(x=>x.Floor)
            @Html.FBMEditorFor(x=>x.Motor1State)
            @Html.FBMEditorFor(x => x.Motor2State)
            @Html.FBMSplit();
            @Html.FBMSaveButton()
        }
    }
}
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
